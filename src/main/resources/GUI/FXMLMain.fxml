                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                           <padding>
                              <Insets left="0.1" />
                           </padding></CheckBox>
                        <CheckBox fx:id="includeDeviationBox" focusTraversable="false" layoutX="19.0" layoutY="277.0" mnemonicParsing="false" selected="true" text="Include deviation">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                           <padding>
                              <Insets left="0.1" />
                           </padding></CheckBox>
                     </children>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </AnchorPane>
               </right>
               <center>
                  <fx:include fx:id="lineChart" minHeight="-Infinity" minWidth="-Infinity" source="FXMLLineChart.fxml" />
               </center>
            </BorderPane>
             <fx:include fx:id="tableView" minHeight="-Infinity" minWidth="-Infinity" source="FXMLTableView.fxml" VBox.vgrow="SOMETIMES" />
         </children>
      </VBox>
      <fx:include fx:id="loading" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" source="FXMLLoading.fxml" StackPane.alignment="CENTER" />
   </children>
</StackPane>

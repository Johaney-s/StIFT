                        </Label>
                        <Label fx:id="informationLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="19.0" layoutY="187.0" minHeight="-Infinity" minWidth="-Infinity" text="Invalid input" textFill="#d21818" visible="false">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font>
                           <effect>
                              <Blend />
                           </effect>
                        </Label>
                        <Label layoutX="19.0" layoutY="99.0" minHeight="-Infinity" minWidth="-Infinity" text="Uncertainty" wrapText="true">
                           <font>
                              <Font name="Arial" size="12.0" />
                           </font></Label>

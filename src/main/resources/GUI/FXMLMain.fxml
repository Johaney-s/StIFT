<StackPane minHeight="-Infinity" minWidth="-Infinity" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FXMLMainController">
   <children>
      <VBox fx:id="vBox" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@Styles.css">
         <children>
            <MenuBar maxHeight="30.0" minWidth="-Infinity" prefHeight="30.0" prefWidth="618.0">
               <menus>
                  <Menu fx:id="gridMenu" mnemonicParsing="false" text="Grid">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#uploadNewGridItemAction" text="Upload new grid">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#resetGridItemAction" text="Reset grid to default">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                     </items>
                  </Menu>
                  <Menu fx:id="dataMenu" mnemonicParsing="false" text="Data">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#exportDataItemAction" text="Export results">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#uploadInputDataFileAction" text="Upload input data file">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#resetResultsAction" text="Reset result table">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                     </items>
                  </Menu>
                  <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#aboutItemAction" text="About" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <BorderPane fx:id="borderPane" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS">
               <center>
                  <fx:include fx:id="lineChart" minHeight="-Infinity" minWidth="-Infinity" source="FXMLLineChart.fxml" />
               </center>
               <right>
                  <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="354.0" prefWidth="130.0" BorderPane.alignment="CENTER_RIGHT">
                     <BorderPane.margin>
                        <Insets right="10.0" />
                     </BorderPane.margin>
                     <children>
                        <TextField fx:id="temperatureField" alignment="CENTER" layoutX="54.0" layoutY="73.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="66.0" />
                        <TextField fx:id="tempUncertaintyField" layoutX="80.0" layoutY="104.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="39.0" text="0.0" />
                        <TextField fx:id="luminosityField" alignment="CENTER" layoutX="54.0" layoutY="135.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="66.0" />
                        <TextField fx:id="lumUncertaintyField" layoutX="80.0" layoutY="167.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="39.0" text="0.0" />
                          <Button alignment="CENTER" contentDisplay="CENTER" layoutX="80.0" layoutY="219.0" minHeight="-Infinity" minWidth="-Infinity" onAction="#goButtonAction" prefHeight="26.0" prefWidth="38.0" text="GO" textAlignment="CENTER" />
                        <Label alignment="CENTER" layoutX="9.0" layoutY="77.0" minHeight="-Infinity" minWidth="-Infinity" text="lg Teff" textAlignment="CENTER" />
                        <Label alignment="CENTER" layoutX="9.0" layoutY="139.0" minHeight="-Infinity" minWidth="-Infinity" text="lg L" textAlignment="CENTER" />
                        <Label alignment="CENTER" layoutX="9.0" layoutY="41.0" minHeight="-Infinity" minWidth="-Infinity" text="Estimate result">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="informationLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="9.0" layoutY="196.0" minHeight="-Infinity" minWidth="-Infinity" text="Invalid input" textFill="#d21818" visible="false">
                           <font>
                              <Font size="13.0" />
                           </font>
                           <effect>
                              <Blend />
                           </effect>
                        </Label>
                        <Label layoutX="9.0" layoutY="108.0" minHeight="-Infinity" minWidth="-Infinity" text="Uncertainty" />
                        <Label layoutX="9.0" layoutY="172.0" minHeight="-Infinity" minWidth="-Infinity" text="Uncertainty" />
                        <CheckBox fx:id="includeErrorBox" focusTraversable="false" layoutX="9.0" layoutY="261.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="110.0" selected="true" text="Include error" />
                        <CheckBox fx:id="includeDeviationBox" focusTraversable="false" layoutX="9.0" layoutY="286.0" mnemonicParsing="false" selected="true" text="Include deviation" />
                     </children>
                  </AnchorPane>
               </right>
               <bottom>
                   <fx:include fx:id="tableView" minHeight="-Infinity" minWidth="-Infinity" source="FXMLTableView.fxml" />
               </bottom>
            </BorderPane>
         </children>
      </VBox>
      <fx:include fx:id="loading" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" source="FXMLLoading.fxml" StackPane.alignment="CENTER" />
   </children>
</StackPane>
